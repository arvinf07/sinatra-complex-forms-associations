<h1>Update Pet</h1>

<form method='post' action='/pets/<%=@pet.id%>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="pet_name">Name of Pet: </label>
  <input type="text" name='pet[name]' value=<%=@pet.name%> id="pet_name"><br><br>
  <%@owners.each do |owner|%>
  <input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value=<%=owner.id%> <%='checked' if @pet.owner == owner%> >
  <label for="pet[owner_id]"><%=owner.name%></label><br>
  <%end%>

  <label for='owner_name'>Owner's name: </label>
  <input type='text' id='owner_name' name='owner[name]'><br><br>

  <input type="submit" value="Update Pet">

</form>