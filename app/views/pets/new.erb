<h1>Create a new Pet</h1>

<form method='post' action='/pets'>
  <label for="pet_name">Name of Pet: </label>
  <input type="text" name='pet[name]' id="pet_name"><br><br>
  <%@owners.each do |owner|%>
  <input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value=<%=owner.id%>>
  <label for="pet[owner_id]"><%=owner.name%></label><br>
  <%end%>

  <label for='owner_name'>Owner's name: </label>
  <input type='text' id='owner_name' name='owner_name'><br><br>

  <input type="submit" value="Create Pet">

</form>
